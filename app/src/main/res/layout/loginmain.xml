<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loginmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreenimage"
    tools:context="com.example.gaurav.hungergo.Loginmain">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a1000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Food Good Mood â˜»"
        android:textColor="#cbffffff"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView6" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    </LinearLayout>


    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="42dp"
        android:background="@drawable/secondscreen_boarderclick"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/relativeLayout">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#03ffffff"
            android:hint="                           EMAIL                                         "
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/editTextEmail"
            android:inputType="textEmailAddress"
            />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbuttonclick"
        android:text="                   login                        "
        android:textSize="15dp"
        android:id="@+id/loginbutton"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_alignLeft="@+id/relativeLayout" />

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="42dp"
        android:background="@drawable/secondscreen_boarderclick"
        android:layout_marginBottom="43dp"
        android:id="@+id/relativeLayout2"
        android:layout_above="@+id/loginbutton"
        android:layout_alignStart="@+id/loginbutton">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#03ffffff"
            android:paddingLeft="5dp"
            android:inputType="textPassword"
            android:paddingRight="5dp"
            android:hint="          PASSWORD                      "
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/editTextPassword" />
    </RelativeLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12dp"
    android:text="Forget Password |"
        android:id="@+id/loginscreenforgetpassword"

        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/loginbutton"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="27dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12dp"
    android:text="    Register"
        android:id="@+id/loginscreenregister"

        android:clickable="true"
        android:layout_alignBaseline="@+id/loginscreenforgetpassword"
        android:layout_alignBottom="@+id/loginscreenforgetpassword"
        android:layout_toEndOf="@+id/loginscreenforgetpassword" />

</RelativeLayout>
