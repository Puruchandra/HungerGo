<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/shadow"
    android:layout_margin="10dp"
    android:weightSum="10"
    android:clickable="true"
android:id="@+id/list_item_full_layout"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"

        >

    <ImageView
        android:layout_marginRight="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="25dp"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dashboard2"
        android:id="@+id/imageview_veglist_item"
        android:clickable="true"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#87ffffff"
            android:id="@+id/color_changer_onclick"
            android:visibility="invisible"

            ></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#a5f94905"
            android:textSize="90dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/textview_veglistitem_cart_counter"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="add"
            android:background="@drawable/layout_button_click_response"
            android:layout_margin="5dp"
            android:id="@+id/buttom_list_itemadder"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginRight="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#88000000"
            android:hint="item name"
            android:textStyle="bold"
            android:textColorHint="#aa000000"
            android:layout_centerInParent="true"
            android:textSize="17dp"
            android:id="@+id/textview_vegsection_item_name"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/textview_vegsection_item_name"
            android:layout_marginLeft="5dp"
            android:id="@+id/imageview_listitem_symbol"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        >

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#b6000000"
            android:hint="your item detail here"
            android:textColorHint="#5a000000"
            android:id="@+id/textview_vegsection_itemdetail"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="â‚¹ XXX"
        android:textColorHint="#40000000"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="17dp"
        android:id="@+id/textview_vegsection_totalcost"
        />

</LinearLayout>