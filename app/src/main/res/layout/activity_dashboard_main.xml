<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dash_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gaurav.hungergo.Dashboard_main"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="#fe0404"
        android:id="@+id/hungergotext"
        ><ImageView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/imagebackclickdashboard"
        android:src="@drawable/ic_chevron_left_black_24dp"
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ĥunger Ǧo"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:id="@+id/textView9"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="10dp"
        >
        <ViewFlipper

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageflipper_dashboard"

            >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:id="@+id/flipper1"

                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:id="@+id/flipper2"
                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:id="@+id/flipper3"

                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:id="@+id/flipper4"
                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:id="@+id/flipper5"
                />

        </ViewFlipper>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                >
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/dashboard1"
                    android:clickable="true"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:text="Veg"
                    android:background="#45000000"
                    android:textColor="#ffffff"
                    android:textSize="20dp"

                    android:layout_gravity="bottom"
                    android:layout_marginLeft="80dp"


                    />
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/dashboard2"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:text="Non-Veg"
                    android:background="#45000000"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="50dp"
                    />

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/dashboard3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:text="Beverages"
                    android:background="#45000000"
                    android:textColor="#ffffff"
                    android:textSize="20dp"

                    android:layout_gravity="bottom"
                    android:layout_marginLeft="40dp"


                    />

            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                >


                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/dashboard4"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:text="Fast foods"
                    android:background="#45000000"
                    android:textColor="#ffffff"
                    android:textSize="20dp"

                    android:layout_gravity="bottom"
                    android:layout_marginLeft="40dp"

                    />

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        >

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:id="@+id/dashboard5"

                /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="Sweets"
            android:textColor="#ffffff"
            android:background="#3c000000"
            android:textSize="20dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="150dp"
            />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
