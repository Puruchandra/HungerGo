<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrationimage"
    tools:context="com.example.gaurav.hungergo.RegistrationActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="#61000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ĥunger Ǧo"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:textStyle="italic"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/relativeLayout1"
        android:background="@drawable/secondscreen_boarderclick"
        android:layout_marginTop="168dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
          android:paddingLeft="5dp"
            android:background="#01ffffff"
            android:inputType="textPersonName"
            android:id="@+id/edittextregistrationname"
            android:hint="                       USERNAME"
            android:textSize="12dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/relativeLayout2"
        android:background="@drawable/secondscreen_boarderclick"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
          android:paddingLeft="5dp"
            android:background="#01ffffff"
            android:inputType="textEmailAddress"
            android:id="@+id/edittextregistrationemail"
            android:hint="                       EMAIL ID"
            android:textSize="12dp"
            />
    </RelativeLayout>    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/relativeLayout3"
        android:background="@drawable/secondscreen_boarderclick"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:paddingRight="5dp"
            android:background="#01ffffff"
          android:paddingLeft="5dp"
            android:id="@+id/edittextregistrationPassword"
            android:hint="         PASSWORD"
            android:textSize="12dp"
            />
    </RelativeLayout>     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/relativeLayout4"
        android:background="@drawable/secondscreen_boarderclick"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:background="#01ffffff"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:paddingRight="5dp"
          android:paddingLeft="5dp"
            android:id="@+id/edittextregistrationConPassword"
            android:hint="     CONFIRM  PASSWORD"
            android:textSize="12dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/relativeLayout5"
        android:background="@drawable/secondscreen_boarderclick"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:background="#01ffffff"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
          android:paddingLeft="5dp"
            android:id="@+id/edittextregistrationDOB"
            android:hint="                       BIRTH DATE"
            android:textSize="12dp"
            android:clickable="true"
            />
    </RelativeLayout><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/relativeLayout6"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_centerHorizontal="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept terms and conditions"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="5dp"
      android:paddingLeft="5dp"
        android:checked="false"
        android:id="@+id/edittextregistrationCheckbox"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentStart="true" />
</RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="register"
        android:id="@+id/register_button"
        android:layout_alignParentBottom="true"
        android:background="@drawable/loginbuttonclick"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/relativeLayout6"
        android:layout_alignEnd="@+id/relativeLayout6" />
</RelativeLayout>
