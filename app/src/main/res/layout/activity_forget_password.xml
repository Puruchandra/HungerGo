<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/forgetpassword"
    tools:context="com.example.gaurav.hungergo.ForgetPassword">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8a000000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/relativeLayout1"
        android:background="@drawable/secondscreen_boarderclick"
        android:layout_marginTop="205dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:background="#01ffffff"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:inputType="textEmailAddress"
            android:id="@+id/edittextforgetemail"
            android:hint="                          EMAIL ID"
            android:textSize="12dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/relativeLayout2"
        android:background="@drawable/secondscreen_boarderclick"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:background="#01ffffff"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/forgetpasswordDOB"
            android:hint="                          BIRTH DATE"
            android:textSize="12dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/relativeLayout3"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/loginbuttonclick"
            android:textColor="#ffffff"

            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/buttonforgetpassword"
            android:hint="  RESET PASSWORD"
            android:textStyle="bold"
            android:textSize="12dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginBottom="79dp"
        android:id="@+id/textView8"
        android:layout_above="@+id/relativeLayout2"
        android:layout_centerHorizontal="true" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="go back"
    android:layout_centerInParent="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="100dp"
    android:textSize="15dp"
    android:clickable="true"
    android:id="@+id/goback"
    />

</RelativeLayout>
