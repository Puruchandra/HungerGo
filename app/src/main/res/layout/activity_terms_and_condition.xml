<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_terms_and_condition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gaurav.hungergo.Terms_and_condition">


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tcbackground"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#52000000"

        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="@string/termsandcondition"

        />
</ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETURN BACK"
        android:background="#ffffff"
        android:textColor="#000000"
        android:id="@+id/tcgoback"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
